{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "db:generate": {
            "inputs": [".env*"],
            "cache": false
        },
        "db:push": {
            "inputs": [".env*"],
            "cache": false
        },
        "build": {
            "dependsOn": ["db:generate", "^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "dev": {
            "dependsOn": ["db:generate"],
            "cache": false,
            "persistent": true
        }
    }
}

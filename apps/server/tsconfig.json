{
    "extends": "@repo/typescript-config/base.json",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__"
    ]
}